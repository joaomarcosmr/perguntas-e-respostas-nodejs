<%- include ('partials/header.ejs') %>
  <%- include ('partials/navbar.ejs') %>

    <div class="container">
      <% if (msg) { %>
        <br>
        <h1 class="bg-success p-3"><%= msg %>!</h1>
      <% } %>  
      
      <hr>
      <h1>Perguntas</h1>
      <hr>

      <a href="/perguntar" class="btn btn-primary text-center">Faça uma pergunta também</a>

      <br>

      <% perguntas.forEach(pergunta => { %>
        <br>
          <div class="card">
            <div class="card-body">
              <h3><%= pergunta.titulo %> </h3>
              <p> <%= pergunta.descricao %></p>
            </div>
            <div class="card-footer">
              <a href=<%=`/pergunta/${pergunta.id}`%>><button class="btn btn-primary">Responder</button></a>
            </div>
          </div>
      <% }) %>
    </div>

<%- include ('partials/footer.ejs') %>